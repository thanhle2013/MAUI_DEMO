<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherTwentyOne.Pages.TaskDetail"
             xmlns:viewmodel="clr-namespace:WeatherTwentyOne.ViewModel"
             x:DataType="viewmodel:TaskHomeDetailViewModel"
             Title="TaskDetail">
    <VerticalStackLayout>

        <Label Text="{Binding Text}" FontSize="30" TextColor="Blue" VerticalOptions="Center" HorizontalOptions="Center"></Label>

        <Button Command="{Binding GoBackCommand}" Text="Go back"></Button>
    </VerticalStackLayout>
    
    
</ContentPage>